<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.navy.navytrivia"
    versionCode = "10" 
    version     = "1.0.0" >

    <name>Recruit Topic Challenge</name>

    <description>
        Prototype Navy Trivia App
    </description>


    <plugin name="cordova-plugin-statusbar" source="npm" version="2.2.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />

    <splash src="splash.png" />
    <icon src="icon.png" />

    <preference name="webviewbounce" value="false" />
    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>

    <platform name="ios" >
        <preference name="target-device" value="tablet" />
        <preference name="orientation" value="portrait" />
        

        <!-- iPad -->
        <icon src="icons/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="icons/icon-76@2x.png" platform="ios" width="152" height="152" />
        <splash src="portrait.png" platform="ios" width="768" height="1024" />
        <splash src="portrait@2x.png" platform="ios" width="1536" height="2048" />

        <!-- Settings Icon -->
        <icon src="icons/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="icons/icon-small@2x.png" platform="ios" width="58" height="58" />

        <!-- Spotlight Icon -->
        <icon src="icons/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="icons/icon-40@2x.png" platform="ios" width="80" height="80" />
        
    </platform>


</widget>



